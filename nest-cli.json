{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json",
        "webpackConfigPath": "apps/auth-service/webpack.config.js"
      }
    },
    "logger-lib": {
      "type": "library",
      "root": "libs/logger-lib",
      "entryFile": "index",
      "sourceRoot": "libs/logger-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger-lib/tsconfig.lib.json"
      }
    },
    "pg-lib": {
      "type": "library",
      "root": "libs/pg-lib",
      "entryFile": "index",
      "sourceRoot": "libs/pg-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/pg-lib/tsconfig.lib.json"
      }
    },
    "project-studio": {
      "type": "application",
      "root": "apps/project-studio",
      "entryFile": "main",
      "sourceRoot": "apps/project-studio/src",
      "compilerOptions": {
        "tsConfigPath": "apps/project-studio/tsconfig.app.json"
      }
    },
    "redis-lib": {
      "type": "library",
      "root": "libs/redis-lib",
      "entryFile": "index",
      "sourceRoot": "libs/redis-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis-lib/tsconfig.lib.json"
      }
    },
    "i18n-lib": {
      "type": "library",
      "root": "libs/i18n-lib",
      "entryFile": "index",
      "sourceRoot": "libs/i18n-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/i18n-lib/tsconfig.lib.json"
      }
    },
    "shared-dto-lib": {
      "type": "library",
      "root": "libs/shared-dto-lib",
      "entryFile": "index",
      "sourceRoot": "libs/shared-dto-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared-dto-lib/tsconfig.lib.json"
      }
    }
  }
}